extend ./modules/layout.pug

block append head
    - var isItIndexPage = true
    - var pageSection = { saleProduct: false, subscribe: true}
    - var subscribe = true
    title Week06 - E-commerce | Product
    link(rel="stylesheet", href="assets/style/all.css")
    script(src="assets/js/vendors.js")
    script(src="assets/js/all.js")

block content
    section.productDetail.fix-nav
        .container
            .row.flex-nowrap.mt-6
                .col-8
                    .custom-card.custom-card-md--imgleft.flex-column.mb-3.pb-md-3.pb-2.w-100
                        .imgWrap.position-relative.mb-6.overflow-hidden.align-center.w-100
                            img.w-100(src="assets/images/img-1.jpg", alt="saleProduct image")
                            p.position-absolute.text-white.p-4.custom-font-size-1 On Sale
                        .row.custom-card__content.align-items-start.flex-row
                            .col-md-7.col-12.custom-card__content__title.mb-1
                                p.custom-font-size-3
                                    | This beautiful light grey cup comes from Taiwan. Add some minimalist scenes to your lifetime and use this cup for tea, coffee, dessert, or to place small items as a dish tray.
                            .col-md-5.col-12.custom-card__content__content
                                p.text-muted
                                    | Made in Taiwan 
                                    br 
                                    | 8 x 8 x 6 cm 
                                    br
                                    | Dishwasher and Microwave-safe
                .col-5.position-relative
                    .card
                        p Home / Product / Cup
                        h2 Tatami Cup
                        .content
                        .btn.btn-primary Add to cart
