                    span.material-icons search
            li.nav-item
                a.nav-link(href='#')
                    span.material-icons notifications_active
        section.pageSection.container-fluid
            .row
                .adminTable.col-12.table-responsive
                    table.table.table-hover
                        thead
                            tr
                                th(scope='col') 
                                    | ID
                                    span.material-icons.align-bottom arrow_downward
